<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.author.try(:name) , book %></td>
        <td><%= book.title %></td>
        <td><%= book.version %></td>
        <td>
         <%= link_to book , class: 'btn-sm btn-info'  do %>
          <i class="fa fa-eye"></i> Show
         <% end %>
        </td>

        <td>
          <%= link_to edit_book_path(book), class: 'btn-sm btn-info' do %>
              <i class="fa fa-edit"></i> Edit
          <% end %>
        </td>

        <td>
          <%= link_to  book, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn-sm btn-danger' do %>
              <i class="fa fa-remove"></i> Destroy
          <% end %>
       </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
