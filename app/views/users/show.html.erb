<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<h2> My List of books</h2>

<table class="table table-striped">
  <thead>
    <tr>
    <th>Book Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= link_to book.author.try(:name) , book %></td>
        <td><%= book.title %></td>

     </tr>
    <% end %>
  </tbody>
</table>

