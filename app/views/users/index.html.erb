<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
     <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= %></td>
        <td><%= link_to user.name , user %></td>
        <td><%= user.email %></td>
          <td>
             <%= link_to user , class: 'btn-sm btn-info'  do %>
              <i class="fa fa-eye"></i> Show
             <% end %>
         </td>
        <td>
          <%= link_to edit_user_path(user), class: 'btn-sm btn-info' do %>
              <i class="fa fa-edit"></i> Edit
          <% end %>
        </td>
        <td>
          <%= link_to  user, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn-sm btn-danger' do %>
              <i class="fa fa-remove"></i> Destroy
          <% end %>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
