<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
         <%= link_to category , class: 'btn-sm btn-info'  do %>
          <i class="fa fa-eye"></i> Show
         <% end %>
        </td>

        <td>
          <%= link_to edit_category_path(category), class: 'btn-sm btn-info' do %>
              <i class="fa fa-edit"></i> Edit
          <% end %>
        </td>

        <td>
          <%= link_to  category, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn-sm btn-danger' do %>
              <i class="fa fa-remove"></i> Destroy
          <% end %>
       </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
